<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="col-sm-10 col-md-6">
      <form class="card text-center border mt-4" id="post-form">
        <div class="card-header">
          <h2>
            {{#if newpost}}
              Add New Post
            {{/if}}
            {{#if editpost}}
              Edit Post
            {{/if}}
          </h2>
        </div>
        <div class="p-2">
          <label for="post-title" class="form-label">Title:</label>
          <textarea type="text" class="form-control" id="post-title">
            {{#if editpost}}
              {{post.title}}
            {{/if}}
          </textarea>
        </div>
        <div class="p-2">
          <label for="post-content" class="form-label">Content:</label>
          <textarea type="text" class="form-control" id="post-content">
            {{#if editpost}}
              {{post.content}}
            {{/if}}
          </textarea>
        </div>
        <div class="p-2">
          <button type="submit" class="btn btn-primary my-2">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
  {{#if newpost}}
    <script src="/javascript/newpost.js"></script>
  {{/if}}
  {{#if editpost}}
    <script src="/javascript/editpost.js"></script>
  {{/if}}
</div>