<!-- post -->
<div class="col-sm-10 col-md-8">
  <a href="/post/{{id}}" class="text-decoration-none">
    <article class="card text-center mx-4 my-3">
      <div class="card-header">
        <h2 class="card-title link-primary">{{title}}</h2>
        <div class="card-subtitle text-dark">
          by
          {{user.username}}
          on
          {{format_date createdAt}}
        </div>
        {{#if owned}}
          <div class="row">
            <div class="col">
              <a
                href="/dashboard/editpost/{{id}}"
                class="btn btn-warning"
              >Edit</a>
            </div>
            <div class="col">
              <button
                class="btn btn-danger deletePost"
                data-id={{id}}
              >Delete</button>
            </div>
          </div>
        {{/if}}

      </div>
      <div class="card-body text-dark">
        {{content}}
      </div>
    </article>
  </a>
</div>