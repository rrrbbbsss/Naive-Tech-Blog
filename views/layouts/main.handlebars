<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Naive Tech Blog</title>
  </head>
  <body>
    <header class="bg-primary">
      <h1 class="text-white p-2">Naive Tech Blog</h1>
      <nav class="p-2">
        <a href="/" class="text-white p-2 btn btn-link">Home</a>
        <a href="/dashboard" class="btn btn-link text-white p-2">Dashboard</a>
        {{#if loggedIn}}
          <button
            id="logout"
            class="btn btn-link text-white p-2"
          >logout</button>
        {{else}}
          <a href="/login" class="btn btn-link text-white p-2">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="d-flex flex-column justify-content-center align-items-center">
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>